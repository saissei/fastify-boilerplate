{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "es2020": true,
    "browser": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "tsconfigRootDir": ".",
    "createDefaultProgram": true,
    "project": "./tsconfig.json",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "prettier"
  ],

  "rules": {
    "prettier/prettier": "error"
  }
}
