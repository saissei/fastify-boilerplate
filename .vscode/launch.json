{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "vscode-jest-tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/node_modules/.bin/jest",
      "protocol": "inspector",
      "args": ["--runInBand"],
      "windows": {
        "program": "${workspaceRoot}/node_modules/jest/node_modules/.bin/jest"
      },
      "console": "integratedTerminal",
      // "console": "internalConsole",
      //"console": "externalTerminal",
      "internalConsoleOptions": "neverOpen",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    }
  ]
}
